# {ampersand, eacute, quotedbl, apostrophe, parenleft, section, egrave, exclam, ccedilla, agrave}
# wm independent hotkeys {{{
# Programs {{{
# alt + {Return, m, w, c, v, b, n}
    # {$TERMINAL, $TERMINAL -e ncmpcpp, $TERMINAL -e vim -c VimwikiIndex, $TERMINAL -e calcurse, $TERMINAL -e vifm, $BROWSER, $TERMINAL -e neomutt}

super + Return
    $TERMINAL

super + m
    $TERMINAL -e ncmpcpp

super + w
    $TERMINAL -e vim -c VimwikiIndex

super + c
    $TERMINAL -e calcurse

super + r
    $TERMINAL -e ranger

super + b
    $BROWSER

super + n
    $TERMINAL -e neomutt
# }}}

# Actions {{{
super + d
    $HOME/.config/rofi/bin/appmenu

super + x
    $HOME/.config/rofi/bin/powermenu
    # $HOME/.config/polybar/scripts/powermenu.sh

super + shift + m
    $HOME/.config/rofi/bin/mpdmenu

# Toggle shiftlock esc swap on or off 
super + shift + {s,u}
    {$HOME/.config/bspwm/scripts/swap-esc-caps.sh on && dunstify "Escape key swapped", $HOME/.config/bspwm/scripts/swap-esc-caps.sh off && dunstify "Escape key reset"}

super + shift + x
    $HOME/.config/bspwm/scripts/lock.sh

# screenshot
super + shift + p
    $HOME/.config/rofi/bin/scrotmenu
    # maim $HOME/Pictures/screenshot/pic-full-$(date +'%d-%m-%Y-%H-%M-%S').png && dunstify "Screenshot saved $(date +'%d-%m-%Y-%H-%M-%S').png"

super + shift + n
    $HOME/.config/rofi/bin/networkmenu

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

XF86Audio{RaiseVolume,LowerVolume,Mute}
    $HOME/.config/dunst/scripts/volume-notification.sh {up,down,mute}
    # amixer {-D pulse sset Master 5%+ unmute,-D pulse sset Master 5%- unmute, -D pulse set Master1+ toggle}

XF86MonBrightness{Up,Down}
    $HOME/.config/dunst/scripts/brightness-notification.sh {up,down}
    # xbacklight {-inc 5,-dec 5}
# }}}
# }}}

# bspwm hotkeys {{{
# quit/restart bspwm
super + shift + {e,r}
    bspc {quit,wm -r}

# close and kill
super + shift + q
    bspc node -k

alt + F4
    bspc node -c

# # alternate between the tiled and monocle layout
# alt + m
#     bspc desktop -l next

# # send the newest marked node to the newest preselected node
# alt + g
#     bspc node -s biggest
# }}}

# state/flags {{{
# set the window state
super + {t,shift + t,s,f}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

## Toggle between floating & tiled
super + space
    bspc node -t "~"{floating,tiled}
# }}}

# focus/swap {{{

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
    bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + Tab
    bspc desktop -f last

# focus or send to the given desktop
super + {_,shift + }{ampersand, eacute, quotedbl, apostrophe, parenleft, section, egrave, exclam, ccedilla, agrave}
    bspc {desktop -f,node -d} '^{1-9,10}'
# }}}

# preselect {{{
# preselect the direction
super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {ampersand, eacute, quotedbl, apostrophe, parenleft, section, egrave, exclam, ccedilla, agrave}
    bspc node -o 0.{1-9}
# super + ctrl + {1-9}
#     bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
    bspc node -p cancel

# # cancel the preselection for the focused desktop
# super + ctrl + shift + space
#     bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# Split horizontal, split vertical, or cancel
super + ctrl + {v,shift+v,shift+Escape}
    bspc node -p {south,east,cancel}
# }}}

# move/resize {{{
# expand window
super + shift + ctrl + {u,i,o,p}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract window
super + shift {u,i,o,p}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {u,i,o,p}
    bspc node -v {-20 0,0 20,0 -20,20 0}
# }}}
